if showProducts
  .container
    table.table.table-dark.table-striped.table-hover
      thead
        tr
          th(scope='col') ID
          th(scope='col') Nombre de Producto
          th(scope='col') Precio
          th(scope='col') Foto
      tbody
      each val in arrayOfProducts
        tr
          th(scope='row')=val.id
          td=val.title
          td=val.price
          td
            img(style='object-fit:cover;width: 100%; height: 50px' src=val.thumbnail alt=val.title)
else
  .alert.alert-danger(role='alert') No existen productos!
