{{#if showProducts}}
<div class="container">
   <table class="table table-dark table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre de Producto</th>
      <th scope="col">Precio</th>
      <th scope="col">Foto</th>
    </tr>
  </thead>
  <tbody>
      {{#each arrayOfProducts}}
        <tr>
            <th scope="row">{{id}}</th>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td><img style="object-fit:cover;width: 100%; height: 50px" src={{thumbnail}} alt={{title}}></td>
        </tr>
      {{/each}}
  </tbody>
</table>
</div>
 
{{else}}
    <div class="alert alert-danger" role="alert">
    No existen productos!
    </div>
{{/if}}